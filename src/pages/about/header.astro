---
import "tailwindcss";
import "@/styles/global.css";
import { dataHeaderAbout } from "@/data/about";
---

<section>
  {
    dataHeaderAbout.map((home) => (
      <div
        class="relative flex bg-black backdrop-brightness-50 bg-no-repeat bg-center bg-cover h-screen w-full"
        style={`background-image: url('${home.background}')`}
      >
        <div class="absolut p-16 z-10 flex flex-col items-end justify-end">
          <div>
            <h1 class="font-rethink font-semibold text-[#FFFFFF] text-[128px]">
              {home.title}
            </h1>
            <h1 class="font-rethink font-semibold text-[#FFFFFF] text-[32px] tracking-wide">
              {home.subTitle}
            </h1>
          </div>
        </div>
      </div>
    ))
  }
</section>
