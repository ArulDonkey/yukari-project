---
import "@/styles/global.css";
import "tailwindcss";
import { Button } from "./ui/button";
---

<nav class="absolute flex justify-center top-0 left-0 w-full z-20">
  <div class="gap-16 w-full h-20 px-8 py-6 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="text-2xl font-bold text-white">
      <img src="/mask-group.svg" alt="Yukari Logo" class="w-35 h-20" />
    </a>

    <!-- Menu NavBar -->
    <div class="space-x-15">
      <a href="/" class="text-white hover:text-gray-200 text-[16px] font-semibold font-rethink">Beranda</a>
      <a href="/about" class="text-white hover:text-gray-200 text-[16px] font-semibold font-rethink">Tentang Kami</a>
      <a href="#services" class="text-white hover:text-gray-200 text-[16px] font-semibold font-rethink">Program</a>
      <a href="#contact" class="text-white hover:text-gray-200 text-[16px] font-semibold font-rethink">Galeri</a>
      <a href="#contact" class="text-white hover:text-gray-200 text-[16px] font-semibold font-rethink">Artikel</a>
    </div>

    <div class="space-x-8">
      <a href="#">
        <Button
          variant={"normalButton"}
          className="border-2 border-transparant text-white font-normal font-mono px-3 py-5 uppercase"
          >Hubungi Kami</Button
        >
      </a>
      <a href="#">
        <Button
          variant={"normalButton"}
          className="bg-[#AB0103] border-0 text-white font-normal font-mono px-3 py-6 uppercase">Daftar Sekarang</Button
        >
      </a>
    </div>
  </div>
</nav>
